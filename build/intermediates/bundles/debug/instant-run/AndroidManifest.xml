<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smt.pulltorefresh"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.smt.pulltorefresh.MainActivity"
            android:label="@string/title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smt.pulltorefresh.activity.PullableExpandableListViewActivity"
            android:label="@string/title" />
        <activity
            android:name="com.smt.pulltorefresh.activity.PullableGridViewActivity"
            android:label="@string/title" />
        <activity
            android:name="com.smt.pulltorefresh.activity.PullableListViewActivity"
            android:label="@string/title" />
        <activity
            android:name="com.smt.pulltorefresh.activity.PullableScrollViewActivity"
            android:label="@string/title" />
        <activity
            android:name="com.smt.pulltorefresh.activity.PullableWebViewActivity"
            android:label="@string/title" />
        <activity
            android:name="com.smt.pulltorefresh.activity.PullableImageViewActivity"
            android:label="@string/title" />
        <activity
            android:name="com.smt.pulltorefresh.activity.PullableTextViewActivity"
            android:label="@string/title" />
    </application>

</manifest>